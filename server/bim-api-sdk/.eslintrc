{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "standard",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6

    },
    "rules": {
        "no-unused-vars": 0,
        "no-path-concat": 0,
        "standard/no-callback-literal": false,
        "semi": ["error", "always"],
        "indent": ["error", 2, {
            "SwitchCase": 1
        }],
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }]
    }
}
